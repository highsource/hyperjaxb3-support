      <xs:maxInclusive value="7" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="tBalise">
    <xs:complexContent>
      <xs:extension base="rail:tOrientedElement">
        <xs:attributeGroup ref="rail:aBalise" />
        <xs:attribute name="ndx" type="rail:tPIG"> </xs:attribute>
      </xs:extension>
