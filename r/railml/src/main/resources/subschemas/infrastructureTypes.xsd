          <xs:enumeration value="pneumatic" />
          <xs:enumeration value="magnetic" />
          <xs:enumeration value="inductive" />
          <xs:enumeration value="optical" />
          <xs:enumeration value="radio" />
        </xs:restriction>
      </xs:simpleType>
      <xs:simpleType>
        <xs:restriction base="rail:tOtherEnumerationValue" />
      </xs:simpleType>
    </xs:union>
  </xs:simpleType>

