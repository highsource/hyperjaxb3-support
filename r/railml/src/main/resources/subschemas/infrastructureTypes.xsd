    <xs:attribute name="version" type="rail:tRailMLVersion" use="required" />
    <xs:attribute name="infrastructureRef" type="rail:tGenericRef" />
    <xs:attribute name="id" type="rail:tGenericID" use="required" />
  </xs:complexType>

